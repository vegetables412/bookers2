<body>
<div class="body">
<div class="container">
<div class="row">

<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    </div>
<% end %>

<% if @book.errors.any? %>
    <p>エラーでーす。</p>
<% end %>

    <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    </div>
    <div class="field row">
    <label for="book_body">Opinion</label>
    <%= f.text_area :body %>
    </div>
    <div class="actions row">
    <%= f.submit 'Update Book' %>
	</div>
<% end %>

<%= link_to "Show", book_path(@book) %>
 | 

<a href="/books">Back</a>
</div>

<div class="col-md-3"></div>

</div>
</div>
</div>
</body>