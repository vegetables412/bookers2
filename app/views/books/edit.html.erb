<body>
<div class="body">
<div class="container">
<div class="row">

<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
    <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    </div>
    <div class="field row">
    <label for="book_body">Opinion</label>
    <%= f.text_area :body %>
    </div>
    <div class="actions row">
    <%= f.submit 'Update Book' %>
	</div>
<% end %>

<%= link_to "Show", book_path(@book) %>
 | 

<a href="/books">Back</a>
</div>

<div class="col-md-3"></div>

</div>
</div>
</div>
</body>