	<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
	<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
	<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
	</ul>
	</div>
<% end %>

<% if @book.errors.any? %>
	<p>エラーでーす。</p>
<% end %>

    <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
	</div>
	<div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
	</div>
	<div class="actions">
    <%= f.submit 'Create Book' %>
	</div>

<% end %>