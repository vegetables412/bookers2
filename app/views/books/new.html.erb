	<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

    <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
	</div>
	<div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
	</div>
	<div class="actions">
    <%= f.submit 'Create Book' %>
	</div>

<% end %>