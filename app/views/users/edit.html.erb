<body>
	<div class="body">
		<div class="container">
			<h2>User info</h2>
			<%= form_for(@user) do |f| %>
				<div class="field">
					<label for="user_name">Name</label>
					<%= f.text_field :name, autofocus: true, class:"form-control", id:"user_name", placeholder:"name" %>
				</div>
				<div class="field">
					<label for="user_image">Image</label>
					<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
					<div class="user-edit-image">
					<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
					</div>
				</div>
				<div class="field">
					<label for="user_introduction">Introduction</label>
					<%= f.text_area :introduction,autofocus: true, class:"form-control", id:"user_introduction", placeholder:"introduction" %>
				</div>
				<div class="actions">
					<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
				</div>
			<% end %>
		</div>
	</div>
</body>